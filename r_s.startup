# configuration des IPs et des routes
ip address add 10.0.1.2/28 dev eth0
ip address add 172.16.0.2/17 dev eth1

ip link set dev eth0 up
ip link set dev eth1 up

ip route add default via 10.0.1.1
ip route add 192.168.0.0/24 via 172.16.0.2

# resolution des noms pour la connection r√©seau
cp /shared/resolv.conf /etc/resolv.conf

# masquerade (pour le connection avec internet)
iptables -t nat -A POSTROUTING -o eth0 -j MASQUERADE